#!/bin/sh

# Symlinks all dotfiles in DOTFILES_ROOT to home directory

source "/$HOME/.files/lib/globals"
source "/$DOTFILES_ROOT/lib/functions"

for file in $(find $DOTFILES_ROOT -name ".[^.]*" -maxdepth 1); do
  if [ $file != $DOTFILES_ROOT ]; then
    link_safe $file
  fi
done

echo "Symlinks set."
